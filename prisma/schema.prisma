generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  ORGANIZADOR 
  COMUM
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  username String  @unique
  role Role @default(COMUM)
  email    String  @unique
  password String
  image    String?

  

  // Events   Events[]
  Post Post[]
  events   Events[]  @relation("OrganizadorEvents")
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  Int
  atual     Int
  descricao String
  meta      Int
  titulo    String
  author    User     @relation(fields: [authorId], references: [id])
}

model Events {
  id        Int      @id @default(autoincrement())
  titulo    String
  descricao String
  dataIni   DateTime @default(now())
  dataFim   DateTime @default(now())
  local     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  imagem    String?

  organizadorId Int?  // opcional
organizador   User? @relation("OrganizadorEvents", fields: [organizadorId], references: [id])

  @@map("events") // Nome da tabela no banco de dados (em min√∫sculas)
}
